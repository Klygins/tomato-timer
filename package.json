{
  "name": "TomatoTimer",
  "description": "Tomato timer for a brilliant time management method",
  "author": "Alexey Klygin",
  "license": "MIT",
  "version": "0.1.0",
  "repository": "https://github.com/farawayCC/tomato-timer.git",
  "dependencies": {
    "cross-env": "6.0.2",
    "electron-is-dev": "1.1.0",
    "electron-log": "^3.0.8",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.2.3",
    "redux": "^4.0.5",
    "redux-persist": "^6.0.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.0.3",
    "update-electron-app": "^1.2.0"
  },
  "devDependencies": {
    "concurrently": "4.1.2",
    "electron": "6.0.11",
    "electron-builder": "^21.2.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^1.4.4",
    "react-scripts": "3.1.2",
    "wait-on": "3.3.0"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "icon": "./src/icon.png",
  "build": {
    "appId": "com.example.tomato-app",
    "productName": "TomatoTimer",
    "copyright": "Copyright Â© 2021 ${author}",
    "mac": {
      "icon": "./src/icon.png",
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "./src/icon.png"
    },
    "files": [
      "./src/*"
    ],
    "directories": {
      "buildResources": "src"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
